@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LoginPage</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-primary">

    <div class="container-fluid justify-content-center align-items-center vh-100 d-flex" style="gap: 1rem;">

        <div class="container">
            <ul class="nav nav-tabs bg-light d-flex justify-content-start align-items-center"  role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" href="#student-tab" data-bs-toggle="pill">Student</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#faculty-tab" data-bs-toggle="pill">Faculty</a>
                </li>
            </ul>

            <div class="tab-content">
                <div class="container tab-pane active bg-light shadow p-5" id="student-tab">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Message
                        </div>
                    }
                    <form action="@Url.Action("LoginStudent", "Login")" method="post">
                        <h2>Login For Student</h2>
                        <div class="form-group">
                            <label>Student No: </label>
                            <input type="text" name="student_no" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>Password: </label>
                            <input type="password" name="password" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Submit</button>
                    </form>
                </div>
                <div class="container tab-pane fade bg-light  shadow p-5" id="faculty-tab">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Message
                        </div>
                    }
                    <form action="@Url.Action("FacultyLogin", "Login")" method="post">
                        <h2>Login For Faculty</h2>
                        <div class="form-group">
                            <label>Faculty Id: </label>
                            <input type="text" name="id" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>Password: </label>
                            <input type="password" name="password" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
